<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".config.HomeConfigFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sincronización"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/borde_campos"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Sincronizar Datos de Rodales"
            android:textColor="@color/holo_green_oscuro"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/id_sinc_rodales"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bosque_otro" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/borde_campos"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Sincronizar Parcelas de Rodales Seleccionados"
            android:textColor="@color/holo_green_oscuro"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/id_sinc_parcelas"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_mapa" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/borde_campos"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView5654"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Enviar datos a Postgres"
            android:textColor="@color/holo_green_oscuro"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/id_enviar_datos"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/subir" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5fd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Configuraciones de Relevamiento"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/borde_campos"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView3p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Restricciones de entrada de datos"
            android:textColor="@color/holo_green_oscuro"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/id_conf_restricciones"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/config" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Configuraciones de Conexión"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/borde_campos"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView3_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Parametros de conexión a PostGIS"
            android:textColor="@color/holo_green_oscuro"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/id_conf_postgis"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/postgres" />

    </LinearLayout>

</LinearLayout>