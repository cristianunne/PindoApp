<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".config.RodalesSincronizarConfigFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Configuraciones de SincronizaciÃ³n:"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/borde_campos"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView_rodcong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Ver Rodales Sincronizados"
            android:textColor="@color/holo_green_oscuro"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/id_sinc_rodal_ver"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ver" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/borde_campos"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView_rodsinc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Sincronizar"
            android:textColor="@color/holo_green_oscuro"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/id_sinc_rodal_sinc"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sync" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:padding="5dp">

        <Button
            android:id="@+id/buttonVolverSinc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/effect_button"
            android:text="Volver"
            android:textColor="@android:color/white" />

    </FrameLayout>


</LinearLayout>