<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dfdfdf"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_dark"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_dr_title_ac_canc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Editar Árbol"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="DAP:"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_addarbol_dap"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:background="@drawable/borde_campos"
                android:ems="10"
                android:inputType="numberSigned|numberDecimal"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/tv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:textColor="@android:color/holo_red_light"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Altura:"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_addarbol_altura"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:background="@drawable/borde_campos"
                android:ems="10"
                android:inputType="numberSigned|numberDecimal"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Altura de Poda:"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_addarbol_altura_poda"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:background="@drawable/borde_campos"
                android:ems="10"
                android:inputType="numberSigned|numberDecimal"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Marca:"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_addarbol_marca"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/borde_campos"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView11_"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Dmsm:"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_addarbol_dmsm"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:background="@drawable/borde_campos"
                android:ems="10"
                android:inputType="numberSigned|numberDecimal"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView112_"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Calidad:"
                android:textColor="@android:color/black" />

            <Spinner
                android:id="@+id/et_addarbol_spinner_addarbol"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView1121_"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="¿Cosechado?:"
                android:textColor="@android:color/black" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonSi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:height="1dp"
                    android:checked="false"
                    android:onClick="onRadioButtonClicked"
                    android:text="SI"
                    android:textColorLink="@android:color/holo_green_light" />

                <RadioButton
                    android:id="@+id/radioButtonNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:height="1dp"
                    android:checked="false"
                    android:onClick="onRadioButtonClicked"
                    android:text="NO"
                    android:textColorLink="@color/holo_green_light" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".40"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView111"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical|start"
                    android:text="Lat:"
                    android:textColor="@android:color/black"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="10dp" />

                <EditText
                    android:id="@+id/et_addarbol_lat"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/borde_campos"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:inputType="numberSigned|numberDecimal"
                    android:paddingLeft="10dp"
                    app:layout_constraintStart_toEndOf="@+id/textView111"
                    tools:layout_editor_absoluteY="0dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".40"

                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView111_"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:text="Longi:"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toEndOf="@+id/tv_edit_parc_lat_point_rel"
                    tools:layout_editor_absoluteY="10dp" />

                <EditText
                    android:id="@+id/et_addarbol_long"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/borde_campos"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="numberSigned|numberDecimal"
                    android:paddingLeft="10dp"
                    app:layout_constraintStart_toEndOf="@+id/textView111_"
                    tools:layout_editor_absoluteY="4dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_cancelar_dialog_ac_can"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/effect_button_remove"
            android:text="Cancelar"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_addarbol_acept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="Aceptar"
            android:textColor="@android:color/holo_green_dark" />
    </LinearLayout>

</LinearLayout>